# UI settings for window management
# Non-color settings that are independent of the color theme
{
  # Opacity settings (0.0 - 1.0)
  opacity = {
    terminal = 1.0;
    bar = 0.90;
    launcher = 0.95;
    notification = 0.95;
  };

  # Border configuration
  border = {
    enable = false;
    width = 2;
  };

  # Gap configuration
  gaps = {
    inner = 0;
    outer = 0;
  };

  # Corner rounding
  rounding = 0; # Sharp corners for minimal look
}
